@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-light">Create New</a>
</p>

<div class="card text-white bg-secondary">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
            <tr class="text-center">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model){
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light" style="padding: 5px 10px">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-light" style="padding: 5px 10px">
                            <i class="bi bi-search"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-light" style="padding: 5px 10px">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

</div>