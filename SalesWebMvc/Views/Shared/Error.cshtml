@model SalesWebMvc.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}


<div class="card border-danger mb-3">
    <div class="card-header">
        <h1>@ViewData["Title"]</h1>
        
    </div>

    <div class="card-body">
        <h4 cite="card-title">@Model.Message</h4>
        @if (Model.ShowRequestId)
        {
            <p class="card-text">
                <strong>Request ID:</strong> <code class="text-white-50">@Model.RequestId</code>
            </p>
        }
    </div>

    <div class="card-footer">
        <a href="javascript:history.back()" class="btn btn-min-width btn-secondary">
            <i class="bi bi-caret-left-fill"></i>
            Back to security
        </a>
    </div>
</div>


